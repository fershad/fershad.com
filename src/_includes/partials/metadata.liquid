{% capture pageTitle %}
    {{title}} - {{site.title}}
{% endcapture%}
{% if site.title == title %}
  {% assign pageTitle = title %}
{% endif %}

{% assign siteTitle = site.title %}

{% if metaTitle %}
  {% assign pageTitle = metaTitle %}
{% endif %}

{% unless description %}
  {% assign description = summary %}
{% endunless %}

{% if seo.canonical %}
  {% assign canonical = seo.canonical %}
{% endif %}

<title>{{ pageTitle }}</title>
<meta name="description" content="{{ description }}" />
{% if canonical.size > 0 %}
  <link rel="canonical" href="{{ canonical }}" />
{% else %}
  <link rel="canonical" href="{{ site.baseURL }}{{ page.url }}" />
{% endif %}
<meta name="theme-color" content="#1c7ed6">